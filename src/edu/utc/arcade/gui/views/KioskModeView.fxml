<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Pane prefHeight="443.0" prefWidth="718.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
      fx:controller="edu.utc.arcade.gui.Controllers.KioskModeViewController">
    <HBox layoutX="14.0" layoutY="14.0" prefHeight="100.0" prefWidth="200.0">
        <children>
            <Button fx:id="HomeButton" mnemonicParsing="false" onAction="#handleSubmitButtonAction" text="Back"/>
        </children>
    </HBox>
    <children>
        <GridPane alignment="center" hgap="10" layoutX="-9.0" layoutY="132.0" prefHeight="288.0" prefWidth="718.0"
                  vgap="10">
            <padding>
                <Insets bottom="10" left="25" right="25" top="25"/>
            </padding>
            <children>
                <Label text="Welcome" style="-fx-font: NORMAL 20 Tahoma;" underline="true" textFill="#f8f8f8"
                       GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" textFill="#f8f8f8"/>

                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                               onKeyReleased="#keyListener"/>
                <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <children>
                        <Button fx:id="submit" onAction="#handleSubmitButtonAction" text="Sign In"/>
                    </children>
                </HBox>
            </children>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>

    </children>
</Pane>
